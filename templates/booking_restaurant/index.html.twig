{% extends 'base-back.html.twig' %}

{% block title %}BookingRestaurant index{% endblock %}

{% block body %}
    <h1>BookingRestaurant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User_id</th>
                <th>StartDate</th>
                <th>Nombre</th>
               
            </tr>
        </thead>
        <tbody>
        {% for booking_restaurant in booking_restaurants %}
            <tr>
                <td>{{ booking_restaurant.id }}</td>
                <td>{{ booking_restaurant.userId }}</td>
                <td>{{ booking_restaurant.startDate ? booking_restaurant.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking_restaurant.nombre }}</td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
