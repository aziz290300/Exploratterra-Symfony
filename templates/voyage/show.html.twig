{% extends 'base-back.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ voyage.destination }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ voyage.prix }}</td>
            </tr>
            <tr>
                <th>Date_depart</th>
                <td>{{ voyage.dateDepart ? voyage.dateDepart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Guide</th>
                <td>{{ voyage.guide }}</td>
            </tr>
            <tr>
                <th>Date_retour</th>
                <td>{{ voyage.dateRetour ? voyage.dateRetour|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_voyage_index') }}">Liste</a>

    <a href="{{ path('app_voyage_edit', {'id': voyage.id}) }}">Modifier</a>

    {{ include('voyage/_delete_form.html.twig') }}
{% endblock %}
